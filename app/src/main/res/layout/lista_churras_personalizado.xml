<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llItens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgPessoa"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
        />
        <LinearLayout
            android:id="@+id/llConvidado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nomeConvidado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#000"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/contribuicaoConvidado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contribuição"
                android:textColor="#000"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/statusConvidado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Status"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_below="@+id/llItens"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@android:color/holo_red_dark"/>


</RelativeLayout>
